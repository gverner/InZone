<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/securitySymbolLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security" />

        <TextView
            android:id="@+id/securitySymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:hint="@string/security_edit_symbol" />

        <TextView
            android:id="@+id/securityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/securityNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:text="Name :" />

        <TextView
            android:id="@+id/securityName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:minWidth="100dp"
            android:maxLength="25" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demandZoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:text="DZDL :" />

        <EditText
            android:id="@+id/demandZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:minWidth="100dp"
            android:inputType="numberDecimal"
            android:maxLength="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pdl1Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:text="PDL1 :" />

        <EditText
            android:id="@+id/pdl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:inputType="numberDecimal"
            android:minWidth="100dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pdl2Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:text="PDL2 :" />

        <EditText
            android:id="@+id/pdl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:minWidth="100dp"
            android:inputType="numberDecimal"
            android:maxLength="10" />

    </LinearLayout>

</LinearLayout>